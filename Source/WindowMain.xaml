
<Window x:Class="VisualTreeNET.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualTreeNET"
        mc:Ignorable="d"
        Title="" Height="600" Width="1000">

      <Grid>
       
        <DockPanel>
            <Menu Name="MenuMain" DockPanel.Dock="Top" >
                <MenuItem Header="Tree">
                    <MenuItem  Name="MenuTreeBST"  Click="ActionTreeBST" Header="Classic BST Tree" />
                    <Separator />
                    <MenuItem Name="MenuTreeAVL" Click="ActionTreeAVL" Header="AVL Tree" />
                    <Separator />
                    <MenuItem Name="MenuTreeRB" Click="ActionTreeRB" Header="Red Black Tree"/>
                    <Separator />
                </MenuItem>
                <MenuItem Name="MenuSettings" Click="ActionSettings" Header="Settings">
                </MenuItem>
                <MenuItem Name="MenuAbout" Click="ActionAbout" Header="About">
                </MenuItem>
            </Menu>
        </DockPanel>

        <Grid Margin="0, 20, 30, 40">
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2" Width="auto" Background="Yellow">

                <Button>
                    <Rectangle Width="40" Height="40" Fill="{ StaticResource IconPlus }"/>
                </Button>

                <Button>
                    <Rectangle Width="40" Height="40" Fill="{ StaticResource IconMinus }"/>
                </Button>

            </StackPanel>

            <Border Name="BorderInput" Grid.Row="1" Grid.ColumnSpan="2"  Background="Red" Margin="20, 10, 0, 0" >
            </Border>
            
            <Border Name="BorderTree" Grid.Row="2" Grid.Column="0"  Background="Blue" Margin="20, 0, 10, 0" >
            </Border>
            
            <Border Name="BorderNotify" Grid.Row="2" Grid.Column="1"  Background="Orange" Margin="20, 0, 10, 0" >
            </Border>

            <Border Name="BorderNotifyAction" Grid.Row="2" Grid.Column="2"  Background="Green" Margin="20, 0, 10, 0" >
            </Border>

        </Grid>
    </Grid>
</Window>
    
